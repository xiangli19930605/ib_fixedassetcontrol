<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"  />



    <style name="SplashTheme" parent="public_AppTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>



    //普通textview
    <style name="TextView_commom">
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="sDividerLineType">none</item>
        <item name="sLeftViewWidth">0dp</item>
        <item name="sLeftTextColor">@color/gray</item>
        <item name="sLeftTextSize">12sp</item>
        <item name="sCenterTextSize">12sp</item>
        <item name="android:duplicateParentState">false</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sLeftTextGravity">center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="sUseRipple">false </item>
    </style>
    <style name="TextView_commom_12">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="sDividerLineType">none</item>
        <item name="sLeftViewWidth">0dp</item>
        <item name="sLeftTextColor">@color/gray</item>
        <item name="sLeftTextSize">12sp</item>
        <item name="sCenterTextSize">12sp</item>
        <item name="android:duplicateParentState">false</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sLeftTextGravity">center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="sUseRipple">false </item>
    </style>

    <style name="TextView_middle">
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="sDividerLineType">none</item>
        <item name="sLeftViewWidth">0dp</item>
        <item name="sLeftTextColor">@color/black</item>
        <item name="sLeftTextSize">14sp</item>
        <item name="sCenterTextSize">14sp</item>
        <item name="android:duplicateParentState">false</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sLeftTextGravity">center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="sUseRipple">false </item>
    </style>
    <style name="TextView_total">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="sDividerLineType">none</item>
        <item name="sLeftViewWidth">0dp</item>
        <item name="sLeftTextColor">@color/blue</item>
        <item name="sCenterTextColor">@color/gray</item>
        <item name="sLeftTextSize">19sp</item>
        <item name="sCenterTextSize">19sp</item>
        <item name="android:duplicateParentState">false</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sLeftTextGravity">center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="sUseRipple">false </item>
    </style>
    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor" >#00000000</item>

    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <declare-styleable name="CircleProgressBar">

        <attr name="outCircleColor" format="color"></attr>
        <attr name="inCircleColor" format="color"></attr>
        <attr name="progressColor" format="color"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="textBold" format="boolean"></attr>
        <attr name="lineWidth" format="dimension"></attr>


    </declare-styleable>
</resources>
